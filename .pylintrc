[MASTER]
ignore = .venv, tests
ignore-patterns = test_*.py
init-hook='import sys; sys.path.extend(["tweetspect", "."])'
extension-pkg-whitelist = pydantic

[FORMAT]
max-line-length = 120
max-module-lines = 1000
max-returns = 8
indent-after-paren = 4

[DESIGN]
max-args = 7
max-locals = 15
min-public-methods = 0

[MESSAGES CONTROL]
disable = missing-docstring,no-self-use,fixme

[BASIC]
good-names = id,T
